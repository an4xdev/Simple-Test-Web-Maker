@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1 class="text-danger">
                <i class="fas fa-exclamation-circle me-2"></i>Error
            </h1>
            <hr class="my-3">
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>An error occurred
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <p class="mb-0">An error occurred while processing your request.</p>
                    </div>

                    @if (Model.ShowRequestId)
                    {
                        <div class="card mb-4">
                            <div class="card-body">
                                <h6 class="card-subtitle mb-2 text-muted">Error Details</h6>
                                <p class="mb-0">
                                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                                </p>
                            </div>
                        </div>
                    }

                    <div class="d-flex justify-content-between mt-4">
                        <a href="/" class="btn btn-outline-secondary">
                            <i class="fas fa-home me-1"></i> Return Home
                        </a>
                        <a href="javascript:history.back()" class="btn btn-primary">
                            <i class="fas fa-arrow-left me-1"></i> Go Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-info-circle text-primary me-2"></i>
                        Development Information
                    </h5>
                    <p class="card-text">
                        Swapping to <strong>Development</strong> environment will display more detailed information about the error that occurred.
                    </p>
                    <hr>
                    <div class="alert alert-warning mb-0">
                        <p class="mb-2"><strong>Warning:</strong></p>
                        <p class="mb-0">
                            The Development environment shouldn't be enabled for deployed applications. It can result in displaying sensitive information from exceptions to end users.
                        </p>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">For Debugging</h6>
                    <p class="card-text small">
                        For local debugging, enable the <strong>Development</strong> environment by setting the <strong>ASPNETCORE_ENVIRONMENT</strong> environment variable to <strong>Development</strong>
                        and restarting the app.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>