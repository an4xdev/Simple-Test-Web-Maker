@model Question

@{
    ViewData["Title"] = "Delete Question";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1>Delete Question</h1>
            <hr class="my-3">
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion
                    </h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title mb-4">Are you sure you want to delete this question?</h5>

                    <div class="alert alert-warning">
                        <i class="fas fa-info-circle me-2"></i>
                        Deleting this question will remove all associated answers and test data.
                    </div>

                    <div class="card mb-4">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-3 text-muted">Question Details</h6>
                            <dl class="row mb-0">
                                <dt class="col-sm-3">Question Text:</dt>
                                <dd class="col-sm-9">@Html.DisplayFor(model => model.QuestionText)</dd>
                                <dt class="col-sm-3">Project:</dt>
                                <dd class="col-sm-9">@Html.DisplayFor(model => model.Project.Name)</dd>
                                <dt class="col-sm-3">Question ID:</dt>
                                <dd class="col-sm-9"><code>@Model.Id</code></dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between mt-4">
                            <div>
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary me-2">
                                    <i class="fas fa-info-circle me-1"></i> Back to Details
                                </a>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-1"></i> Back to List
                                </a>
                            </div>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-1"></i> Delete Permanently
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-info-circle text-primary me-2"></i>
                        Deleting a Question
                    </h5>
                    <p class="card-text">
                        This action cannot be undone. All answers and data associated with this question will be permanently removed.
                    </p>
                    <hr>
                    <p class="card-text text-muted">
                        <small>
                            Project: @Html.DisplayFor(model => model.Project.Name)
                        </small>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>