@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h1 class="display-4 mb-0">Welcome to Test Manager</h1>
                </div>
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <i class="fa fa-clipboard-check fa-4x text-primary mb-3"></i>
                        <p class="lead">This is where you can see and manage all your tests.</p>
                        <hr class="my-4">
                    </div>

                    <div class="row mt-5">
                        <div class="col-md-4">
                            <div class="card mb-4 shadow-sm h-100">
                                <div class="card-body text-center" style="display: flex;flex-direction: column;justify-content: space-between">
                                    <div>
                                        <i class="fa fa-project-diagram fa-3x text-primary mb-3"></i>
                                        <h3>Projects</h3>
                                        <p class="card-text">Organize and manage your test projects</p>
                                    </div>
                                    <div>
                                        <a asp-controller="Project" asp-action="Index" class="btn btn-primary">
                                            <i class="fa fa-arrow-right"></i> View Projects
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card mb-4 shadow-sm h-100">
                                <div class="card-body text-center" style="display: flex;flex-direction: column;justify-content: space-between">
                                    <div>
                                        <i class="fa fa-question-circle fa-3x text-info mb-3"></i>
                                        <h3>Questions</h3>
                                        <p class="card-text">Create and edit test questions</p>
                                    </div>
                                    <div>
                                        <a asp-controller="Question" asp-action="Index" class="btn btn-info">
                                            <i class="fa fa-arrow-right"></i> View Questions
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card mb-4 shadow-sm h-100">
                                <div class="card-body text-center" style="display: flex;flex-direction: column;justify-content: space-between">
                                    <div>
                                        <i class="fa fa-chart-bar fa-3x text-success mb-3"></i>
                                        <h3>Statistics</h3>
                                        <p class="card-text">Analyze your test results</p>
                                    </div>
                                    <div>
                                        <a asp-controller="Statistic" asp-action="Index" class="btn btn-success">
                                            <i class="fa fa-arrow-right"></i> View Statistics
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="text-center">
                        <p class="text-muted mb-0">Navigate using the options above or the menu at the top</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>