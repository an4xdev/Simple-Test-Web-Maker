@model TestAnswer

@{
    ViewData["Title"] = "Answer Details";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1>Answer Details</h1>
            <hr class="my-3">
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-clipboard-check me-2"></i>Answer Information
                    </h4>
                </div>
                <div class="card-body">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-3 text-muted">Answer Details</h6>
                            <dl class="row mb-0">
                                <dt class="col-sm-3">Answer Text:</dt>
                                <dd class="col-sm-9">@Html.DisplayFor(model => model.Text)</dd>
                                <dt class="col-sm-3">Status:</dt>
                                <dd class="col-sm-9">
                                    @if (Model.IsCorrect)
                                    {
                                        <span class="badge bg-success">Correct Answer</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Incorrect Answer</span>
                                    }
                                </dd>
                                <dt class="col-sm-3">Numeration:</dt>
                                <dd class="col-sm-9"><strong>@Html.DisplayFor(model => model.Numeration)</strong></dd>
                                <dt class="col-sm-3">Answer ID:</dt>
                                <dd class="col-sm-9"><code>@Model.Id</code></dd>
                            </dl>
                        </div>
                    </div>

                    <div class="alert @(Model.IsCorrect ? "alert-success" : "alert-warning") d-flex align-items-center mb-4">
                        <i class="@(Model.IsCorrect ? "fas fa-check-circle" : "fas fa-info-circle") me-3 fs-4"></i>
                        <div>
                            @if (Model.IsCorrect)
                            {
                                <strong>This is a correct answer.</strong> <span>Students who select this option will receive points.</span>
                            }
                            else
                            {
                                <strong>This is an incorrect answer.</strong> <span>Students who select this option will not receive points.</span>
                            }
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <div>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-cog text-primary me-2"></i>
                        Answer Actions
                    </h5>
                    <div class="list-group mb-3">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="fas fa-edit me-2 text-warning"></i> Edit Answer
                        </a>
                        <a asp-controller="Question" asp-action="Index" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="fas fa-question-circle me-2 text-info"></i> View All Questions
                        </a>
                    </div>
                    <hr>
                    <div class="card">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2">Answer Preview</h6>
                            <div class="d-flex align-items-center mt-3">
                                <div class="form-check me-3">
                                    <input class="form-check-input" type="checkbox" checked="@Model.IsCorrect" disabled>
                                </div>
                                <div>
                                    <strong>@Model.Numeration</strong> - @Model.Text
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>