@model Project

@{
    ViewData["Title"] = "Create Project";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1>Create Project</h1>
            <hr class="my-3">
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">New Project Details</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="form-group mb-4">
                            <label asp-for="Name" class="form-label fw-bold">Project Name</label>
                            <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="fas fa-project-diagram"></i>
                                            </span>
                                <input asp-for="Name" class="form-control" placeholder="Enter project name"/>
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Create Project
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-info-circle text-primary me-2"></i>
                        Creating a Project
                    </h5>
                    <p class="card-text">
                        Projects serve as containers for organizing related test questions.
                        Give your project a descriptive name to easily identify it later.
                    </p>
                    <hr>
                    <p class="card-text text-muted">
                        <small>
                            After creating a project, you can add questions and track statistics.
                        </small>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>