@model Project

@{
    ViewData["Title"] = "Project Details";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1>Project Details</h1>
            <hr class="my-3">
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-project-diagram me-2"></i>@Html.DisplayFor(model => model.Name)
                    </h4>
                </div>
                <div class="card-body">
                    <div class="card mb-4">
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-3">Project Name:</dt>
                                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
                                <dt class="col-sm-3">Project ID:</dt>
                                <dd class="col-sm-9"><code>@Model.Id</code></dd>
                            </dl>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <div>
                            <a asp-action="Index" class="btn btn-outline-secondary me-2">
                                <i class="fas fa-arrow-left me-1"></i> Back to Projects
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-cog text-primary me-2"></i>
                        Project Actions
                    </h5>
                    <div class="list-group mb-3">
                        <a asp-controller="Question" asp-action="Index" asp-route-projekt="@Model.Name" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="fas fa-list me-2 text-primary"></i> Manage Questions
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="fas fa-edit me-2 text-warning"></i> Edit Project
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="fas fa-trash me-2 text-danger"></i> Delete Project
                        </a>
                    </div>
                    <hr>
                    <p class="card-text text-muted">
                        <small>
                            Project ID: @Model.Id
                        </small>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>