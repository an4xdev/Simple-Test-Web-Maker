@model Project

@{
    ViewData["Title"] = "Edit Project";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1>Edit Project</h1>
            <hr class="my-3">
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-edit me-2"></i>Update Project Details
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-4">
                            <label asp-for="Name" class="form-label fw-bold">Project Name</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-project-diagram"></i>
                                </span>
                                <input asp-for="Name" class="form-control" placeholder="Enter project name" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-info-circle text-primary me-2"></i>
                        Editing Project
                    </h5>
                    <p class="card-text">
                        You can update the name of your project here.
                        All questions and test answers associated with this project will remain connected.
                    </p>
                    <hr>
                    <p class="card-text text-muted">
                        <small>
                            Project ID: @Model.Id
                        </small>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>