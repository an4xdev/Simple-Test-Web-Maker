@model IEnumerable<Project>

@{
    ViewData["Title"] = "Projects";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1>Project List</h1>
            <hr class="my-3">
        </div>
    </div>

    <div class="card mb-4 shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Project Management</h4>
        </div>
        <div class="card-body">
            <a asp-action="Create" class="btn btn-success">
                <i class="fa fa-plus-circle"></i> Create New Project
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">Projects</h4>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <span class="font-weight-bold">@Html.DisplayFor(modelItem => item.Name)</span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm gap-3">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                            <i class="fa fa-pencil-alt"></i> Edit
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">
                                            <i class="fa fa-info-circle"></i> Details
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                            <i class="fa fa-trash"></i> Delete
                                        </a>
                                        <a asp-controller="Statistic" asp-action="Index" asp-route-id="@item.Id" class="btn btn-outline-success">
                                            <i class="fa fa-chart-bar"></i> Statistics
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>